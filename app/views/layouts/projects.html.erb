<!DOCTYPE html>
<html>
<head>
  <title>rossixTeam</title>
    <div>
    <%= image_tag("rossixSpLogo6.jpg", :align=>'left') %>
    <%= image_tag("rossixTeam.jpg", :align=>'right') %>
    <br /> <br><br><br>
    </div>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="navbar navbar">
  <div class="navbar-inner">
    <div class="container">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <a class="brand" href="#">rossixTeam</a>
      <div class="nav-collapse">
        <ul class="nav">
            <li><%= link_to "Kalender", calendar_path %></li>
          <li><%= link_to "Projekt-Kalender", projectcalendar_path %></li>
            <%= form_tag "/projectsearch/", :class => "navbar-search pullright", :method => :get do   %>
                                                       <%= text_field_tag :title, nil, :class => "search-query span3", :placeholder => "Search Projekt"  %>
                                                    <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="span9"><%= yield %></div>

      <div class="span3">
        <h2> </h2>
 <%= image_tag("Actions-contact-date-icon.png", :align=>'right') %>
    </div>
      <% if @project != nil %>
      <div class="span3">
              <div class="btn-group">
                  <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
                  Report
                  <span class="caret"></span>
                  </a>

                  <ul class="dropdown-menu">

                      <li><%= link_to "Projekt-Report", "/project/report/#{@project.id}" %></li>


                  <!-- dropdown menu links -->
              </ul>

            </div>
            </div>
      <% end %>
  </div>

</div>

</body>
</html>

