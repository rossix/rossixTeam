<%= form_for @project          , :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :title, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :title, :class => 'text_field' %>
    </div>
  </div>

    <div class="control-group">
      <%= f.label :username, :class => 'control-label'%>
      <div class="controls">
        <%= collection_select(:event, :user_id,
                User.all(:order =>'firstname'), :id, :firstname)%>
      </div>
  </div>
    <div class="control-group">
        <%= f.label :color, :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :color, :class => 'text_field' %>
        </div>
      </div>

    <div class="control-group">
       <%= f.label :starts_at, :class => 'control-label' %>
       <div class="controls">
         <%= f.text_field :starts_at, :class => 'datetime_select' %>
       </div>
     </div>


  <div class="control-group">
    <%= f.label :ends_at, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :ends_at, :class => 'datetime_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :all_day, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :all_day, :class => 'check_box' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :description, :class => 'text_area', :rows =>10%>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                projectevents_path, :class => 'btn' %>
  </div>

    <%- model_class2 = Projectevent -%>
    </ul>
      <h3> Project-Milestones</h3>

    <table class="table table-striped">
      <thead>
        <tr>
          <th><%= model_class2.human_attribute_name(:id) %></th>
          <th><%= model_class2.human_attribute_name(:title) %></th>
          <th><%= model_class2.human_attribute_name(:starts_at) %></th>
          <th><%= model_class2.human_attribute_name(:ends_at) %></th>
          <th><%= model_class2.human_attribute_name(:all_day) %></th>
          <th><%= model_class2.human_attribute_name(:description) %></th>
          <th><%= model_class2.human_attribute_name(:created_at) %></th>
          <th><%=t '.actions', :default => t("helpers.actions") %></th>
        </tr>


        <% @projectevents.each do |projectevent| %>
          <tr>
            <td><%= link_to projectevent.id, projectevents_path(projectevent) %></td>
            <td><%= projectevent.title %></td>
            <td><%= projectevent.starts_at %></td>
            <td><%= projectevent.ends_at %></td>
            <td><%= projectevent.all_day %></td>
            <td><%= projectevent.description %></td>
            <td><%=l projectevent.created_at %></td>
            <td>
              <%= link_to t('.edit', :default => t("helpers.links.edit")),
                          edit_projectevent_path(projectevent), :class => 'btn btn-mini' %>
              <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                          projectevent_path(projectevent),
                          :method => :delete,
                          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                          :class => 'btn btn-mini btn-danger' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= link_to t('.new', :default => t("helpers.links.neuer_milestone")),
                new_projectevent_path,
                :class => 'btn btn-primary' %>
    <%= link_to t('.new', :default => t("helpers.links.neuer_milestone2")),
                "/projectevents/new/#{@project.id}",
                :class => 'btn btn-primary' %>
<% end %>
