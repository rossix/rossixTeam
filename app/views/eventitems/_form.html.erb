<%= form_for @eventitem, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :Item, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :item, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :Beschreibung, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :description, :class => 'text_field' %>
    </div>
  </div>
    <div class="control-group">
               <%= f.label :Farbe, :class => 'control-label' %>
             <div class="controls">
               <%= select(:eventitem, :color, [@eventitem.color,
                                "darkgrey",
                                "grey",
                                "darkblue",
                                "blue",
                                "darkred",
                                "red",
                                "orange",
                                "darkgreen",
                                "green",
                                "black",
                                "fertig"]) %></td>
             </div>

           </div>


  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                eventitems_path, :class => 'btn' %>
  </div>
<% end %>
