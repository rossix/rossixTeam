<%- model_class = Projectevent -%>
<div class="page-header">
  <h1>Milestone</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @projectevent.title %></dd>
    <dt><strong>Bearbeiter:</strong></dt>
  <dd><%= @projectevent.user.name %> &nbsp</dd>
  <dt><strong><%= model_class.human_attribute_name(:starts_at) %>:</strong></dt>
  <dd><%= @projectevent.starts_at.strftime("%d.%m.%y") %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ends_at) %>:</strong></dt>
  <dd><%= @projectevent.ends_at.strftime("%d.%m.%y") %></dd>

  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @projectevent.description %></dd>
</dl>

<div class="form-actions">
    <%= link_to t('.back'),
               "/projects/#{@projectevent.project_id}", :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_projectevent_path(@projectevent), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              projectevent_path(@projectevent),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
<h3> Todos</h3>
           <% if @projectevent.todo != nil %>
               <table class="table table-striped">
                   <thead>
                   <tr>
                       <th>Todo</th>
                       <th>Bearbeiter</th>
                       <th>Status</th>

                   </tr>
                   </thead>

                   <% @projectevent.todo.each do |todo| %>
                       <tr>
                           <td>
                               <span class="badge badge-warning">Todo</span> <a href=<%= "/todo/#{todo.id}" %> ><%= todo.todotitle %></a>

                           </td>
                           <td><%= todo.user.firstname%></td>
                           <td><%= todo.state %></td>


                       </tr>
                   <% end %>
                   </tbody>
               </table>

            <% end %>