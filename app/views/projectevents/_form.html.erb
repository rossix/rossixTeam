<%= form_for @projectevent          , :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :titleX, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :title, :class => 'text_field' %>
    </div>
  </div>

    <div class="control-group">
      <%= f.label :username, :class => 'control-label'%>
      <div class="controls">
        <%= collection_select(:event, :user_id,
                User.all(:order =>'firstname'), :id, :firstname)%>
      </div>
  </div>
    <div class="control-group">
        <%= f.label :color, :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :color, :class => 'text_field' %>
        </div>
      </div>
    <div class="control-group">
           <%= f.label :project_id, :class => 'control-label' %>
           <div class="controls">
             <%= f.text_field :project_id, :class => 'text_field' %>
           </div>
         </div>
    <div class="control-group">
               <%= f.label :eventtype, :class => 'control-label' %>
               <div class="controls">
                 <%= f.text_field :eventtype, :class => 'text_field' %>
               </div>
             </div>

    <div class="control-group">
       <%= f.label :starts_at, :class => 'control-label' %>
       <div class="controls">
         <%= f.text_field :starts_at, :class => 'datetime_select' %>
       </div>
     </div>


  <div class="control-group">
    <%= f.label :ends_at, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :ends_at, :class => 'datetime_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :all_day, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :all_day, :class => 'check_box' %>
    </div>

  </div>
  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :description, :class => 'text_area', :rows =>10%>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                projectevents_path, :class => 'btn' %>
  </div>

<% end %>
