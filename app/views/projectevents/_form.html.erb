<%= form_for @projectevent          , :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :title, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :title, :class => 'text_field' %>
    </div>
  </div>

    <div class="control-group">
      <%= f.label :username, :class => 'control-label'%>
      <div class="controls">
        <%= collection_select(:projectevent, :user_id,
                User.all(:order =>'firstname'), :id, :firstname)%>
      </div>
  </div>
    <%= f.hidden_field :color %>
    <%= f.hidden_field :project_id %>
    <%= f.hidden_field :eventtype %>
    <%= f.hidden_field :all_day, :value=>"true" %>

    <div class="control-group">
       <%= f.label :starts_at, :class => 'control-label' %>
       <div class="controls">
         <%= f.text_field :starts_at, :class => 'datetime_select' %>
       </div>
     </div>


  <div class="control-group">
    <%= f.label :ends_at, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :ends_at, :class => 'datetime_select' %>
    </div>
  </div>


  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :description, :class => 'text_area', :rows =>10%>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                projectevents_path, :class => 'btn' %>
  </div>

<% end %>
